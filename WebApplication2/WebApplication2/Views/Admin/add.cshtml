
@{
    ViewBag.Title = "add";
}
    <body>
        @using(Html.BeginForm("addFile",
                        "Admin",
                        FormMethod.Post,
                        new { enctype = "multipart/form-data" }))
        {
            <h2 style="color:white">Title: </h2><input type="text" name="title" />
            <h2 style="color:white">Subject of Article: </h2><input type="text" name="subject" />
            <h2 style="color:white">Article(Word file only): </h2><input type="file" name="file" id="file" />
            <h2 style="color:white">Article image(prefered): </h2><input type="file" name="ArticleImage" id="articleImage" />
            <button type="submit">submit</button>
        }
    </body>