@model IEnumerable<WebApplication2.Controllers.coursesModel>
    <style type="text/css">
        @@font-face {
            font-family: 'Inter';
            src: url('Inter-Regular.ttf');
        }

        .classname {
            font-family: 'Inter';
        }
    </style>
<script>
    var a = 0;
    function showEmailBox(courseID)
    {
        a = courseID;
        document.getElementById("emailBox").style.visibility = "visible";
        document.getElementById("blockingScreen").style.visibility = "visible";
    }

    function hideEmailBox()
    {
        console.log(a.toString());
        document.getElementById("emailBox").style.visibility = "hidden";
        document.getElementById("blockingScreen").style.visibility = "hidden";
    }
</script>
<h2 style="color:white;position:absolute;top:5%;left: 42%;"><u>Our Courses</u></h2>
@for(int i = 0;i < 8;i++)
{
<div style="    box-sizing: border-box;
    position: absolute;
    width: 14%;
    height: 24%;
    left: @(10 + 22 * (i % 4))%;
    top: @(15 + 30 * (i / 4) )%;
    background: #FFFFFF;
    border: 1px solid rgba(0, 0, 0, 0.2);
    border-radius: 20px;">
    <div style="    position: absolute;
    width: 28%;
    height: 20%;
    left: 6%;
    top: 6%;
    background: #D9D9D9;">
        LOGO
    </div>
    <div style="position: absolute;
    width: 90%;
    height: 14%;
    left: 4%;
    top: 34%;
    font-family: 'Inter';
    font-style: normal;
    font-weight: 400;
    font-size: 126%;
    line-height: 36px;
    color: #000000;">TITLE OF THE COURSE</div>
    <div style="    position: absolute;
    width: 100%;
    height: 10%;
    left: 5%;
    top: 52%;
    font-family: 'Inter';
    font-style: normal;
    font-weight: 400;
    font-size: 152%;
    line-height: 39px;
    color: #33CB26;">250$</div>

    <div style="position: absolute;
    width: 100%;
    height: 0px;
    left: 0%;
    top: 71%;
    border: 1px solid rgba(0, 0, 0, 0.2);
    transform: rotate(-0.28deg);"></div>

    
    <button style="    box-sizing: border-box;
    position: absolute;
    width: 40%;
    height: 21%;
    left: 28%;
    top: 75%;
    border: 1px solid #000000;
    border-radius: 15px;
    "
            onclick="showEmailBox(@i)">More detalis</button>
    
</div>
}

<div id="emailBox" style="box-sizing: border-box;
    position: absolute;
    width: 25%;
    height: 30%;
    left: 37%;
    top: 22%;
    background: rgb(255, 255, 255);
    border: 1px solid rgb(0, 0, 0);
    border-radius: 20px;
    visibility: hidden;z-index:2;

">
    <input type="image" src="../../Content/Close.png"style="position: absolute;
width: 38px;
height: 53px;
right:1%;" onclick="hideEmailBox()"/>
    
    <div style=" position: absolute;
    width: 82%;
    height: 25%;
    left: 12%;
    top: 25%;
